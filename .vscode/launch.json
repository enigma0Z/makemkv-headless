{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug API",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main_api",
      "cwd": "${workspaceFolder}/api",
      "console": "integratedTerminal"
    },
    {
      "type": "node-terminal",
      "name": "Launch Web",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/web"
    }
  ]
}